{
    "version": "0.2.0",
    "configurations": [
      
      {
        "name": "Python: Flask (EPIC App)",
        "type": "debugpy",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "server.py",
          "FLASK_ENV": "development",
          "FLASK_RUN_PORT": "3000",
          "FLASK_RUN_HOST": "127.0.0.1"
        },
        "args": [
          "run",
          "--host=127.0.0.1",
          "--port=3000"
        ],
        "jinja": true
      }
    ]
  }
  